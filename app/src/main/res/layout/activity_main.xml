<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Capa estructurada -->
    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/statusBarSpacer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/transparent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="@string/app_title_header"
            android:textAlignment="center"
            android:padding="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notesRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="120dp"
            android:scrollbars="vertical" />
    </LinearLayout>

    <!-- FAB y zona de delete flotando encima -->
    <ImageView
        android:id="@+id/deleteDropZone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="40dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="@drawable/delete_zone_bg"
        android:contentDescription="@string/note_item_drop_to_delete_zone"
        android:elevation="8dp"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fabCreateWholeNote"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:text="@string/add_note_plus_sign"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:background="@drawable/fab_circle" />
</FrameLayout>
